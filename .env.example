# ─── General App Config ─────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_NAME=YourAppName
NEXT_PUBLIC_APP_ENV=development # or staging, production
NEXT_PUBLIC_APP_VERSION=1.0.0

# ─── Base URLs ──────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_BASE_URL=https://api.example.com/v1
NEXT_PUBLIC_CDN_URL=https://cdn.example.com

# ─── Auth / Token ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_AUTH_PROVIDER=google # or 'facebook', 'github'
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Private keys (NEVER exposed to browser, do NOT prefix with NEXT_PUBLIC_)
JWT_SECRET=your_jwt_secret
INTERNAL_API_KEY=your_internal_api_key

# ─── 3rd Party Integrations ──────────────────────────────────────────────────────
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...   # not exposed to browser

NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/123456
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# ─── Internationalization ────────────────────────────────────────────────────────
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,vi,ja

# ─── Feature Flags ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_FEATURE_SIGNUP=true
NEXT_PUBLIC_FEATURE_CHAT=false

# ─── Deployment Metadata ─────────────────────────────────────────────────────────
NEXT_PUBLIC_GIT_COMMIT_SHA=abc123def
NEXT_PUBLIC_DEPLOY_REGION=asia-east1
NEXT_PUBLIC_BUILD_TIME=2025-05-30T00:00:00Z

# ─── Environment Specific ────────────────────────────────────────────────────────
# For staging/prod you can override with `.env.production`, `.env.staging`
